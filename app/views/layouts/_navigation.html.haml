#user_nav
  .container
    .logo.pull-left= link_to image_tag('jupiter-logo.png'), root_url
    .pull-right{style: "margin-top: 7px;"}
      - if current_user
        Signed in as
        = succeed "" do
          %strong{style: "margin-right: 20px;"}= current_user.name
        = link_to "Sign out", signout_path, id: "sign_out", class: "google_sign_in"
      - else
        %span{style: "margin-right: 20px;"} Already have an account?
        = link_to "Sign in with Google", "/auth/google_oauth2", class: "google_sign_in"
    .clearfix
    %hr